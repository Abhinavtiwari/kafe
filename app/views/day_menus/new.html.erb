<div class="page-header">
  <h1>New Day Menu</h1>
</div>

<%= form_tag(day_menus_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :weekday, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :weekday, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Day Menu", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
