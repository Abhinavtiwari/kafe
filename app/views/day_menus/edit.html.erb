<div class="page-header">
  <h1>Editing Day Menu #<%= @day_menu.id %></h1>
</div>

<%= form_tag(day_menu_url(@day_menu), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :weekday, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :weekday, @day_menu.weekday, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Day Menu", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
