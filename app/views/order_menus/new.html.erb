<div class="page-header">
  <h1>New Order Menu</h1>
</div>

<%= form_tag(order_menus_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :weekday, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :weekday, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :quantity, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :quantity, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_bill, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :item_bill, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Order Menu", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
