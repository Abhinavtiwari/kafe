<div class="page-header">
  <h1>Editing Order Link #<%= @order_link.id %></h1>
</div>

<%= form_tag(order_link_url(@order_link), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :order_menu_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :order_menu_id, @order_link.order_menu_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :todays_special_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :todays_special_id, @order_link.todays_special_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Order Link", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
