<div class="page-header">
  <h1>Editing Order #<%= @order.id %></h1>
</div>

<%= form_tag(order_url(@order), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @order.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_status, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :order_status, @order.order_status, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_total, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :order_total, @order.order_total, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :order_date, @order.order_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Order", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
