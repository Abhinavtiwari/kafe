<div class="page-header">
  <h1>New Todays Special</h1>
</div>

<%= form_tag(todays_specials_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :day_menu_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :day_menu_id, options_from_collection_for_select(DayMenu.all, :id, :weekday ) %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_menu_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :item_menu_id, options_from_collection_for_select(ItemMenu.all, :id, :item_name ) %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cuisine, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :cuisine, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Todays Special", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
