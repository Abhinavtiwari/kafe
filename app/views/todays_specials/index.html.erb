<div class="page-header">
  <h1>Todays specials</h1>
</div>

<p><%= link_to 'Add a New Todays Special', new_todays_special_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Day Menu', todays_specials_url(sort: "day_menu_id") %></th>
      <th>Item menu</th>
      <th>Cuisine</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todays_specials.each do |todays_special| %>
      <tr>
      
        <td><%= todays_special.day_menu.weekday %></td>
        <td><%= todays_special.item_menu.item_name %></td>
        <td><%= todays_special.cuisine %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, todays_special_url(todays_special), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_todays_special_url(todays_special), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, todays_special_url(todays_special), method: 'delete', data: { confirm: "Do you really want to delete this todays_special?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


