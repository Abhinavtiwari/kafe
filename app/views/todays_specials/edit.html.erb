<div class="page-header">
  <h1>Editing Todays Special #<%= @todays_special.id %></h1>
</div>

<%= form_tag(todays_special_url(@todays_special), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :day_menu_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :day_menu_id, @todays_special.day_menu_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_menu_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_menu_id, @todays_special.item_menu_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cuisine, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :cuisine, @todays_special.cuisine, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Todays Special", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
